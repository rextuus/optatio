{% extends 'base.html.twig' %}

{% block title %}Registrieren{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-text">
            Registrieren
        </div>
        <div class="page-header-image">
            <i class="fa-solid fa-user-plus fa-lg me-3 text-secondary"></i>
        </div>
    </div>

    <div class="container py-2">
        <div class="card shadow bg-secondary">
            <div class="card-body bg-secondary">
                <!-- Action Buttons -->
                <div class="d-flex justify-content-start gap-2">
                    <a href="{{ path('app_login') }}" class="btn btn-outline-dark btn-small">
                        <i class="fa-solid fa-sign-in-alt btn-icon"></i>
                        <span class="btn-text">Zum Login</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2">
        <div class="card shadow">
            <div class="card-body">
                <!-- Welcome Section -->
                <div class="text-center mb-4 border border-secondary p-3 rounded" role="alert">
                    <h4 class="">Willkommen bei Optatio</h4>
                </div>

                <div class="text-center mb-4 bg-body-secondary p-3 rounded">
                    <p class="fs-6">
                        Eine gute Entscheidung dabei zu sein
                    </p>
                </div>

                <!-- Registration Form -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        {{ form_start(registrationForm, {'method': 'POST'}) }}
                            {% if form_errors(registrationForm) %}
                                <div class="alert alert-danger text-center mb-4">
                                    <i class="fa-solid fa-exclamation-circle me-2"></i>
                                    {{ form_errors(registrationForm) }}
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-envelope"></i>
                                    </span>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder':'Email', 'id': 'email'}}) }}
                                </div>
                                <div class="form-text text-muted">
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="{{ registrationForm.password.first.vars.id }}" class="form-label">Passwort</label>
                                <div class="input-group mb-2">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-lock"></i>
                                    </span>
                                    {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control', 'placeholder':'Passwort', 'id': 'password-first'}}) }}
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-lock"></i>
                                    </span>
                                    {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control', 'placeholder':'Passwort wiederholen', 'id': 'password-second'}}) }}
                                </div>
                                <div class="form-text text-muted">
                                    {{ form_errors(registrationForm.password.first) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="{{ registrationForm.firstName.vars.id }}" class="form-label">Vorname</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder':'Vorname', 'id': 'firstName'}}) }}
                                </div>
                                <div class="form-text text-muted">
                                    {{ form_errors(registrationForm.firstName) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="{{ registrationForm.lastName.vars.id }}" class="form-label">Nachname</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder':'Nachname', 'id': 'lastName'}}) }}
                                </div>
                                <div class="form-text text-muted">
                                    {{ form_errors(registrationForm.lastName) }}
                                </div>
                            </div>

                            {{ form_row(registrationForm._token) }}

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa-solid fa-user-plus me-2"></i>
                                    Registrieren
                                </button>
                            </div>
                        {{ form_end(registrationForm, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
