<!DOCTYPE html>
<html>
<head>
    <title>Hashed Password Result</title>
</head>
<body>
<h1>Hashed Password Result</h1>
<p>The hashed password is: <span id="hashedPassword">{{ hashedPassword }}</span></p>
<button id="copyButton">Copy to Clipboard</button>

<script>
    const copyButton = document.getElementById('copyButton');
    const hashedPassword = document.getElementById('hashedPassword');

    copyButton.addEventListener('click', () => {
        const el = document.createElement('textarea');
        el.value = hashedPassword.textContent;
        document.body.appendChild(el);
        el.select();
        document.execCommand('copy');
        document.body.removeChild(el);
        alert('Password copied to clipboard');
    });
</script>
</body>
</html>