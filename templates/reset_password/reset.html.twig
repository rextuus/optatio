{% extends 'base.html.twig' %}

{% block title %}Passwort zur端cksetzen{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-text">
            Passwort zur端cksetzen
        </div>
        <div class="page-header-image">
            <i class="fa-solid fa-key fa-lg me-3 text-secondary"></i>
        </div>
    </div>

    <div class="container py-2">
        <div class="card shadow bg-secondary">
            <div class="card-body bg-secondary">
                <!-- Action Buttons -->
                <div class="d-flex justify-content-start gap-2">
                    <a href="{{ path('app_login') }}" class="btn btn-outline-dark btn-small">
                        <i class="fa-solid fa-arrow-left btn-icon"></i>
                        <span class="btn-text">Zur端ck zum Login</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2">
        <div class="card shadow">
            <div class="card-body">
                <!-- Header Section -->
                <div class="text-center mb-4 border border-secondary p-3 rounded" role="alert">
                    <h4 class="">Neues Passwort festlegen</h4>
                </div>

                <div class="text-center mb-4 bg-body-secondary p-3 rounded">
                    <p class="fs-6">
                        Bitte geben Sie Ihr neues Passwort ein.
                    </p>
                </div>

                <!-- Reset Password Form -->
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        {{ form_start(resetForm) }}
                            <div class="mb-3">
                                <label for="{{ resetForm.plainPassword.vars.id }}" class="form-label">Neues Passwort</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-lock"></i>
                                    </span>
                                    {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Neues Passwort eingeben'}}) }}
                                </div>
                                <div class="form-text text-muted">
                                    {{ form_errors(resetForm.plainPassword) }}
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa-solid fa-check me-2"></i>
                                    Passwort zur端cksetzen
                                </button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
