{% extends 'base.html.twig' %}

{% block title %}Event erstellen{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-text">
            Event erstellen
        </div>
        <div class="page-header-image">
            <i class="fa-solid fa-plus fa-lg me-3 text-secondary"></i>
        </div>
    </div>

    <div class="container py-2">
        <div class="card shadow bg-secondary">
            <div class="card-body bg-secondary">
                <!-- Action Buttons -->
                <div class="d-flex justify-content-start gap-2">
                    <a href="{{ path('app_event_list') }}" class="btn btn-outline-dark btn-small">
                        <i class="fa-solid fa-arrow-left btn-icon"></i>
                        <span class="btn-text">Zurück</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2">
        <div class="card shadow">
            <div class="card-body">
                <!-- Header Section -->
                <div class="text-center mb-4 border border-secondary p-3 rounded" role="alert">
                    <h4 class="">Neues Event erstellen</h4>
                </div>
                
                <div class="text-center mb-4 bg-body-secondary p-3 rounded">
                    <p class="fs-6">
                        Erstelle hier ein neues Event und lade andere Personen ein, daran teilzunehmen.
                    </p>
                </div>

                {{ form_start(form, {'method': 'POST', 'attr': {'class': 'needs-validation'}}) }}

                {# Display form-wide errors if any #}
                {% if form_errors(form) is not empty %}
                    <div class="alert alert-danger mb-4">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                {# Name Field #}
                <div class="mb-3">
                    <label for="{{ form.name.vars.id }}" class="form-label">
                        Name des Events
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-signature"></i>
                        </span>
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name des Events'}}) }}
                    </div>
                    {{ form_errors(form.name) }}
                </div>

                {# Event Type Field #}
                <div class="mb-3">
                    <label for="{{ form.eventType.vars.id }}" class="form-label">
                        Art des Events
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-list"></i>
                        </span>
                        {{ form_widget(form.eventType, {'attr': {'class': 'form-control', 'placeholder': 'Art des Events auswählen'}}) }}
                    </div>
                    {{ form_errors(form.eventType) }}
                </div>

                {# Submit Button #}
                <div class="d-flex justify-content-between mt-4">
                    <div>
                        {{ form_widget(form.submit, {
                            'attr': {'class': 'btn btn-success'},
                            'label': '<i class="fa-solid fa-save me-2"></i>Speichern'|raw
                        }) }}
                    </div>
                    <a href="{{ path('app_event_list') }}" class="btn btn-outline-dark">
                        <i class="fa-solid fa-times me-2"></i>
                        Abbrechen
                    </a>
                </div>

                {# Remove form_rest since submit button is rendered explicitly #}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}